@using Model.BusinessModels
@*@if (Model.Role == Role.ProjectAdmin)
{*@
<!-- ko with: addProject -->
    <section class="content-header">
        <h1>
            Projects
            <small data-bind="text: title"></small>
        </h1>
        <ol class="breadcrumb">
            <li><a data-bind="attr:{'href' : '/'}"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active"><a data-bind="attr:{'href' : '#/projects'}">Projects</a></li>
            <li class="active" data-bind="text: title"></li>
        </ol>
    </section>
    <section class="content" data-bind="if:isLoaded()">

        <div class="row">
            <!-- left column -->
            <div class="col-md-9">
                <!-- general form elements -->
                <div class="box ">
                    <!-- <div class="box-header with-border">
                        <h3 class="box-title">Create New Project</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <form role="form">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="name">Name</label>
                                <input type="text" class="form-control" id="name" placeholder="Enter name" data-bind="value: name">
                            </div>
                            <div class="form-group">
                                <label for="description">Description</label>
                                <textarea class="form-control" rows="5" placeholder="Enter description" id="description" data-bind="value: description"></textarea>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <label for="version">Version</label>
                                        <input type="text" class="form-control" id="version" placeholder="Enter version" data-bind="value: version">
                                    </div>
                                    <div class="col-lg-6">
                                        <label for="status">Status</label>
                                        <select class="form-control" id="status" data-bind="options: statusList, value: status, optionsCaption: 'Choose ->'"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group" data-bind="if:!isNew()">
                                <label for="participants">Participants</label> <a data-bind="click: invitationDialog" class="btn btn-xs btn-default btn-flat pull-right"> <i class="fa fa-plus"></i> Invite User</a>
                                <table class="table table-hover">
                                    <tbody>
                                    <tr>
                                        <th>Name</th>
                                        <th>E-mail</th>
                                        <th>Phone</th>
                                    </tr>
                                    <!-- ko foreach: content().participants -->
                                    <tr>
                                        <td data-bind="text: name"></td>
                                        <td data-bind="text: email"></td>
                                        <td data-bind="text: phone"></td>
                                    </tr>
                                        <!-- /ko -->
                                    </tbody>
                                    
                                </table>
                            </div>
                        </div><!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn  btn-danger  pull-left" data-bind="visible: !isNew(), click: deleteDialog">Delete</button>
                            <button type="submit" class="btn  bg-olive  pull-right" data-bind="visible: isNew(),click: save">Create</button>
                            <button type="submit" class="btn  bg-olive  pull-right" data-bind="visible: !isNew(),click: save"><i class="fa fa-save"></i> Save</button>
                        </div>
                    </form>
                </div><!-- /.box -->
            </div>
            <div class="col-md-3">
                <h4>Info box</h4>
                <p class="small">
                    Information about this page
                </p>
            </div>
        </div>
        <div data-bind="modal: {
    visible: modalVisible,
    dialogCss: modalSize,
    header: { data: { label: 'Send invitation' } },
    body: { name: bodyTemplate, data: bodyData },
    footer: { data: { action: sendInvitation, primaryLabel: 'Send' } }
    }">
        </div>

    </section>
<script type="text/html" id="invitationTemplate">
    <div class="row">
        <div class="col-md-12">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="col-md-4 control-label" for="email">E-mail</label>
                    <div class="col-md-7">
                        <input id="email" name="email" type="email" placeholder="Enter e-mail" class="form-control" data-bind="value: email">
                    </div>
                </div>
            </form>
        </div>
    </div>
</script>
    <!-- /ko -->

@*}*@