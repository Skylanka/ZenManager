@using Model.BusinessModels
@*@if (Model.Role == Role.ProjectAdmin)
{*@
    <!-- ko with: addRequirement -->
    <section class="content-header">
        <h1 data-bind="html: pageDescription">
        </h1>
        <ol class="breadcrumb">
            <li><a data-bind="attr:{'href' : '/'}"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active"><a data-bind="attr:{'href' : '#/projects'}">Projects</a></li>
            <li class="active"><a data-bind="attr:{'href' : '#/project/' + projectId()}, text: projectName"></a></li>
            <li class="active" data-bind="text: title"></li>
        </ol>
    </section>
    <section class="content" data-bind="if: isLoaded()">

        <div class="row">

            <!-- left column -->
            <div class="col-md-9">
                <!-- general form elements -->
                <div class="box ">
                    <div class="box-header with-border">
                        <h3 class="box-title">Requirement</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <form role="form">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="name">Name</label>
                                <input type="text" class="form-control" id="name" placeholder="Enter name" data-bind="value: name">
                            </div>
                            <div class="form-group">
                                <label for="description">Description</label>
                                <textarea class="form-control" rows="10" placeholder="Enter description" id="description" data-bind="value: description"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="uniqeTag">Unique Tag</label>
                                <div data-bind="if: id()">
                                    <input type="text" class="form-control" id="uniqeTag" data-bind="value: uniqueTag" disabled>
                                </div>
                                <div data-bind="if: !id()">
                                    <input type="text" class="form-control" id="uniqeTag" data-bind="value: selectedType()? selectedType().tag + (selectedType().count + 1) : ''" disabled>
                                </div>

                            </div>
                            <div class="form-group">
                                <label for="type">Type</label>
                                <div class="input-group" data-bind="if: !id()">
                                    <select class="form-control" id="type" data-bind=" options: requirementsTypes(), optionsText: 'name' , value: selectedType,  optionsCaption: 'Choose ->' "></select>
                                    <span class="input-group-btn">
                                <a data-bind="attr:{'href':'#/project/' + projectId() + '/requirements/types/add'}"  class="btn btn-default btn-flat"> <i class="fa fa-plus"></i> Add Requirement Type</a>
                                </span>    
                                </div>
                                <div class="input-group" data-bind="if: id()">
                                    <select class="form-control" id="type" data-bind=" options: requirementsTypes(), optionsText: 'name' , value: selectedType,  optionsCaption: 'Choose ->' " disabled></select>
                                    <span class="input-group-btn">
                                        <a data-bind="attr:{'href':'#/project/' + projectId() + '/requirements/types/add'}" class="btn btn-default btn-flat"> <i class="fa fa-plus"></i> Add Requirement Type</a>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="typeTag">Tag</label>
                                <input type="text" class="form-control" id="typeTag" data-bind="value:selectedType()? selectedType().tag : ''" disabled>
                            </div>


                        </div><!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn bg-olive pull-right" data-bind="visible: !id(),click: save">Create</button>
                            <button type="submit" class="btn bg-olive pull-right" data-bind="visible: id(),click: save"><i class="fa fa-save"></i> Save</button>
                            @*<a data-bind="visible: !id(), attr:{'href':'#/project/'+ projectId()}" class="btn btn-default btn-flat pull-left"><i class="fa fa-undo"></i> Cancel</a>*@
                            <button type="submit" class="btn btn-danger pull-left" data-bind="visible: id(),click: deleteReq">Delete</button>
                        </div>
                    </form>
                </div><!-- /.box -->
            </div>
            <div class="col-md-3">
                <h4>Info box</h4>
                <p class="small">
                    Information about this page
                </p>
            </div>
        </div>


    </section>

    <!-- /ko -->
@*}*@